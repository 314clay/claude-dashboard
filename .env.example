# Database
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=connectingservices

# API
API_PORT=8000

# Path normalization (home directory for ~ substitution)
# USER_HOME=/home/youruser

# LLM (for AI summaries and importance scoring)
# Set ONE API key to enable AI features. If none set, AI features are disabled.
# OPENAI_API_KEY=sk-your-openai-key          # default model: gpt-4o-mini
# ANTHROPIC_API_KEY=sk-ant-your-key          # default model: claude-sonnet-4-5-20250929
# GOOGLE_API_KEY=your-google-key             # default model: gemini-2.5-flash
# LITELLM_BASE_URL=http://localhost:4001     # LiteLLM proxy (backwards compat)
# LITELLM_API_KEY=sk-your-key-here
# LLM_PROVIDER=openai                        # Force provider
# LLM_MODEL=gpt-4o                           # Override default model

# Obsidian vault path (optional)
# OBSIDIAN_VAULT=/path/to/your/vault
